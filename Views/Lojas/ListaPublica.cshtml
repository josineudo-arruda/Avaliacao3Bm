@model List<Avaliacao3BM.ViewModel.LojaViewModel>
@{
    ViewData["Title"] = "Lojas (p√∫blica)";
}

<h1 class="center">Lojas</h1>
<hr>
@if(Model.Count == 0)
{
    <p>Nenhuma Loja cadastrada</p>
    <a href="/Cadastro/Cadastro"><button>Cadastrar Loja</button></a>
} 
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Piso</th>
            <th>Nome</th>
            <th>Descricao</th>
            <th>Tipo</th>
            <th>E-mail</th>
        </tr>
        @foreach(var loja in Model)
        {
            <tr>
                <th>@loja.Id</th>
                <th>@loja.Piso</th>
                <th>@loja.Nome</th>
                <th>@loja.Descricao</th>
                <th>@loja.Tipo</th>
                <th>@loja.Email</th>
            </tr> 
        }
    </table>
    
}